/*
 * Program to display an Nth-line Pascal triangle
 * by applying recursive approach. N = 9
 * @Hieu Pham
 */

public class PascalTriangle
{ 
    public static final int ROWS = 9;
    private static int MAXLENGTH = 0;

    public static void main(String[] args)
    { 
        int[][] pascal  = new int[ROWS +1][];
        pascal[1] = new int[1 + 2];
        pascal[1][1] = 1;
        for (int i = 2; i <= ROWS; i++)
        {
            pascal[i] = new int[i + 2];
            for (int j = 1; j < pascal[i].length - 1; j++)
            {
                pascal[i][j] = pascal[i-1][j-1] + pascal[i-1][j];
                String ConvStr = Integer.toString(pascal[i][j]);
                int stringlen = ConvStr.length();
                if(stringlen > MAXLENGTH) //Flip-flopping this value for printing needs
                    MAXLENGTH = stringlen;
            }
        }

        for (int a = 1; a <= ROWS; a++)
        {                
            for (int b = ROWS; b > a; b--)
                System.out.format("%-" + MAXLENGTH + "s", " ");
            for (int c = 1; c < pascal[a].length - 1; c++)                      
                System.out.format("%-" + (2 * MAXLENGTH) + "s",  pascal[a][c]);
            System.out.println();
        }
    }
}