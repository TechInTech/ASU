stay_time = int(input("How many days are you staying? "))

if (stay_time <= 7) : # processing stay time within one week
    totalTime = (yourday + stay_time) - 7
    print("You will return on: ",wdays[totalTime]," of this week.")
else :
    nDay   = ((yourday + stay_time) // 7)
    nwDays = ((yourday + stay_time) % 7)
    print("You will return after ",nDay," weeks", " on a ",wdays[nwDays])



